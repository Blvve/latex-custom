\usepackage{amssymb}
\usepackage[theorems, skins]{tcolorbox} % For colored theorems. Also loads amsmath

\mathtoolsset{showonlyrefs=true} % Number equations iff they are referenced.

\definecolor{thm_color}{HTML}{227C9D}
\definecolor{lm_color}{HTML}{17C3B2}
\definecolor{def_color}{HTML}{FFCB77}
\definecolor{rmk_color}{HTML}{FE6D73}

\tcbset{
	thmstyle/.style={fonttitle=\bfseries\upshape, fontupper=\slshape, 
		colback=thm_color!5!white, colframe=thm_color}, % options for theorems, corollaries
	lmstyle/.style={fonttitle=\bfseries\upshape, fontupper=\slshape,
		colback=lm_color!5!white, colframe=lm_color}, % options for lemmas, propositions
	defstyle/.style={fonttitle=\bfseries, coltitle=black,
        arc=0mm, colback=def_color!5!white, colframe=def_color}, % options for definitions
	rmkstyle/.style={skin=tile, fonttitle=\bfseries, title filled, sharp corners,
		boxrule=0pt, colback=rmk_color!15!white, colbacktitle=rmk_color} % options for remarks
}

% \newtcbtheorem
% 	[] % init options
% 	{} % name
% 	{} % display name
% 	{} % options
% 	{} % prefix

\newtcbtheorem
	[number within=section] % init options
	{theorem} % name
	{Theorem} % display name
	{thmstyle} % options
	{thm} % prefix

\newtcbtheorem
	[use counter from=theorem] % init options
	{corollary} % name
	{Corollary} % display name
	{thmstyle} % options
	{cor} % prefix

\newtcbtheorem
	[use counter from=theorem] % init options
	{lemma} % name
	{Lemma} % display name
	{lmstyle} % options
	{lm} % prefix

\newtcbtheorem
	[use counter from=theorem] % init options
	{proposition} % name
	{Proposition} % display name
	{lmstyle} % options
	{prop} % prefix

\newtcbtheorem
	[use counter from=theorem] % init options
	{definition} % name
	{Definition} % display name
	{defstyle} % options
	{def} % prefix

\newtcbtheorem
	[use counter from=theorem] % init options
	{remark} % name
	{Remark} % display name
	{rmkstyle} % options
	{rmk} % prefix


